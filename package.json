{
  "name": "task7hd",
  "version": "1.0.0",
  "description": "Task Management API for DevOps Pipeline Demo - HD Assignment",
  "main": "src/app.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --reporters=default --reporters=jest-junit"
  },
  "keywords": ["devops", "pipeline", "jenkins", "nodejs", "api"],
  "author": "Your Name",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "sqlite3": "^5.1.6",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "jest": "^29.6.2",
    "jest-junit": "^16.0.0",
    "supertest": "^6.3.3",
    "nodemon": "^3.0.1"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": ["src/**/*.js", "routes/**/*.js"],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"],
    "reporters": [
      "default",
      ["jest-junit", { "outputDirectory": "coverage", "outputName": "junit.xml" }]
    ]
  }
}